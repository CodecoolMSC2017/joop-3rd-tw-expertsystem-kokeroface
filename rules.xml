<?xml version="1.0" encoding="utf-8"?>
<Rules>
    <Rule id="money">
        <Question>Do you have 30 Eur for a Game?</Question>
        <Answer>
            <Selection value="true">
                <SingleValue value="yes"/>
            </Selection>
            <Selection value="false">
                <SingleValue value="no"/>
            </Selection>
        </Answer>
    </Rule>
    <Rule id="graphics">
        <Question>Are graphics important for you?</Question>
        <Answer>
            <Selection value="true">
                <SingleValue value="yes"/>
            </Selection>
            <Selection value="false">
                <SingleValue value="no"/>
            </Selection>
        </Answer>
    </Rule>
    <Rule id="multiplayer">
        <Question>Playing with others important for you?</Question>
        <Answer>
            <Selection value="true">
